<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".incm">

    <TextView
        android:id="@+id/incm_head"
        android:text="Inches to cm"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#DD1010"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/incm_etext"
        android:hint="Enter the inches value"
        android:layout_below="@+id/incm_head"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/incm_btn"
        android:text="Convert"
        android:layout_below="@+id/incm_etext"
        android:layout_marginTop="20dp"
        android:onClick="convertincm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dis_incm"
        android:layout_below="@+id/incm_btn"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#0C0C0C"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/incm_pic"
        android:layout_below="@+id/dis_incm"
        android:src="@drawable/in_cm"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>